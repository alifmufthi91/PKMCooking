<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.RecipeDetail"
    tools:showIn="@layout/activity_recipe_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Recipe_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam blandit nisi quis pretium sollicitudin. Donec ac libero quis lorem pulvinar sagittis sed at tortor. "
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="15sp"
            android:fontFamily="@font/poppinslight"/>

        <TextView
            android:id="@+id/Recipe_sajian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAlignment="center"
            android:text="Sajian : 4"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/Recipe_sumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAlignment="center"
            android:text="sumber https://www.lipsum.com/feed/html"
            android:textStyle="italic|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="@style/RecipeTextComponents"
            android:text="@string/kandungan_nutrisi"
            android:fontFamily="@font/robotobold"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="#d4d4d4"/>
        <TextView
            android:id="@+id/Recipe_nutrisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:text="Energi : 398 kcal
Energi : 398 kcal
Energi : 398 kcal"
            android:textSize="17sp"
            android:fontFamily="@font/robotoregular"
            android:lineSpacingExtra="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="@style/RecipeTextComponents"
            android:text="@string/bahan_bahan"
            android:fontFamily="@font/robotobold"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="#b5b5b5"/>
        <TextView
            android:id="@+id/Recipe_bahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:text="Energi : 398 kcal
Energi : 398 kcal
Energi : 398 kcal"
            android:textSize="17sp"
            android:fontFamily="@font/robotoregular"
            android:lineSpacingExtra="8dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="@style/RecipeTextComponents"
            android:text="@string/perlengkapan"
            android:fontFamily="@font/robotobold"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="#b5b5b5"/>
        <TextView
            android:id="@+id/Recipe_alat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:text="Energi : 398 kcal
Energi : 398 kcal
Energi : 398 kcal"
            android:textSize="17sp"
            android:fontFamily="@font/robotoregular"
            android:lineSpacingExtra="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="@style/RecipeTextComponents"
            android:text="@string/langkah_pembuatan"
            android:fontFamily="@font/robotobold"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:background="#b5b5b5"/>
        <TextView
            android:id="@+id/Recipe_langkah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginBottom="32dp"
            android:text="Energi : 398 kcal
Energi : 398 kcal
Energi : 398 kcal"
            android:textSize="15sp"
            android:fontFamily="@font/robotoregular"
            android:lineSpacingExtra="1dp"/>
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>